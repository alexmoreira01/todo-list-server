{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM"
   ],
   "target": "es5",
    "module": "commonjs",  
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
                                
    "resolveJsonModule": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    // "strict": true,                                      
    "skipLibCheck": true               
  }
}
